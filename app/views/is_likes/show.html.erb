<div class="content-wrapper">
<h1 class= "title-text">Is Likes</h1>



<h3> <%= @is_like.liker.name %> is like <%= @is_like.liked.name %> </h3>

<div class="comment-banner">
<h4> Comments </h4>
<%= link_to "Add a Comment", like_comment_path(@is_like)%>
</div>

<section>

    <% @is_like.comments.each do |ilc| %>

        <div class = 'comment-box'> 

            <div> <%= ilc.comment_body %> <span><strong> <%= User.find(ilc.user_id).user_name %> </strong> <span> <%= ilc.created_at.strftime("%m/%d/%Y") %> </div>
            
        </div>

    <% end %>


</section>


</div>