<h1>Log in Here</h1>

<% if flash[:error_message] %>
    <div class="error"><%= flash[:error_message] %></div> 
<% end %>



<%= form_tag "/login" do %>
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name%>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
<% end %> 

<br>
<div><%=link_to "Register for Our Site", new_user_path %></div >