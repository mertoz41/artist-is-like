<h1>Sessions#new</h1>

<% if flash[:error_message] %>
    <div class="error"><%= flash[:error_message] %></div> 
<% end %>



<%= form_tag "/login" do %>
    <%= label_tag :user_name %>
    <%= text_field_tag :"user[user_name]" %>
    <%= label_tag :password %>
    <%= password_field_tag :"user[password]" %>
    <%= submit_tag "Log in" %>
<% end %> 