
<p><%= @is_like.liker.name %> is like <%= @is_like.liked.name %> </p>


<%= form_for @comment do |f| %>
    <%= f.hidden_field :user_id, :value => User.find_by(:user_name => session[:user_name]).id %>
    <%= f.hidden_field :is_like_id, :value => @is_like.id %>
    <%= f.label :comment_body, "Leave your comment below:" %><br>
    <%= f.text_area :comment_body %>
    <br>
    <%= f.submit %>

<% end %>